{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "4.0.0",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "tabGroups",
    "notifications",
    "storage",
    "<all_urls>"
  ],
  "icons": {
    "16": "icon/icon_16.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  },
  "background": {
    "service_worker": "background.html",
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_security_policy": "script-src https://kit.fontawesome.com/1ba52c82c4.js 'sha256-ts8aW8Rd9KWcT6JkIPH7pDbl7DgAIgYMSglignYTFjs=' 'sha256-KD8E8s+Y4SbUCYTZ8sbNzljN9csEogfcBifJo0E8+iU=' 'self' 'unsafe-eval'; object-src 'self'"
}
