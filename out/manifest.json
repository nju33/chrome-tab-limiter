{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "4.0.1",
  "default_locale": "en",
  "permissions": ["tabs", "tabGroups", "notifications", "storage"],
  "icons": {
    "16": "icon/icon_16.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false 
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  } 
}
